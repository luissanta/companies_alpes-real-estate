{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app/api", // Reemplaza "your_app_name" con el nombre de tu aplicaci√≥n Flask
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger"
      ],
      "jinja": true,
      "debugOptions": [
        "RedirectOutput"
      ],
      "stopOnEntry": false,
      "showReturnValue": true
    }
  ]
}